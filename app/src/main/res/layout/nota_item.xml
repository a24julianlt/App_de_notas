<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:layout_marginBottom="10dp"
    android:backgroundTint="?attr/background"
    app:cardCornerRadius="15dp"
    app:strokeColor="?attr/colorPrimary"
    app:strokeWidth="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingStart="20dp"
        android:paddingTop="10dp"
        android:paddingEnd="20dp"
        android:paddingBottom="10dp">

        <TextView
            android:id="@+id/nota_titulo"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="Titulo de la nota que sirve de ejemplo"
            android:textColor="?attr/color"
            android:textSize="30dp"
            android:textStyle="bold"
            android:maxLines="1"
            android:ellipsize="end"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="5dp"
                android:text="@string/ultima_modificacion"
                android:textColor="?attr/colorPrimary"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/modificacion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="20/12/2026"
                android:textColor="?attr/colorPrimary"
                android:textSize="15sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/nota_texto"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Cuerpo de la nota"
            android:textColor="?attr/color"
            android:textSize="20dp"
            android:maxLines="2"
            android:ellipsize="end"/>
    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
